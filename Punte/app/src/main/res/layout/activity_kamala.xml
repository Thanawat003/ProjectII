<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kamala">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kamala" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="337dp"
        android:text="หาดกมลา เป็นชายหาดที่ถัดจากหาดสุรินทร์ไปทางด้านทิศใต้ หาดนี้ต่างจากหาดอื่นตรงที่ไม่มีถนนเลียบชายหาด มีเพียงซอยเล็กๆ ที่ตัดจากถนนใหญ่มาที่ชายหาด บริเวณรอบๆ ชายหาดมีที่พักมากมาย ทั้งแบบติดทะเล และไม่ติดทะเล

ชายหาดกมลา เป็นหาดยาวประมาณ 2 กิโลเมตร เป็นหาดที่น้ำทะเลใส ทรายสะอาด มีคลื่นแรงพอประมาณ สามารถลงเล่นน้ำได้ รอบๆ ชายหาดเต็มไปด้วยเตียงผ้าใบของนักท่องเที่ยวที่มานอนอาบแดด อ่านหนังสือ ซึ่งส่วนมากจะเป็นฝรั่งไม่ค่อยมีเอเชีย"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="หาดกมลา"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />
</androidx.constraintlayout.widget.ConstraintLayout>
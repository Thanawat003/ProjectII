<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prayai">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prayai" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="337dp"
        android:text="ป็นพระพุทธรูปปางมารวิชัย ศิลปแบบร่วมสมัย ขนาดหน้าตักกว้าง 25.45 เมตร ความสูง 45 เมตร โครงสร้างคอนกรีตเสริมเหล็ก ประดับผิวด้วยหินอ่อนหยกขาว “สุริยกันต”(สุริยกันตะ) จากพม่า น้ำหนักเฉพาะหินอ่อน หยกขาวประมาณ 135 ตัน หรือประมาณ 2,500 ตารางเมตร ประดิษฐาน ณ พุทธอุทยานยอดเขานาคเกิด ตำบลกะรน อำเภอเมือง จังหวัดภูเก็ต

ซึ่งต่อมาก็ได้รับการถวายพระนามจากสมเด็จพระญาณสังวร สมเด็จพระสังฆราช สกลมหาสังฆปริณายก ว่า “พระพุทธมิ่งมงคลเอกนาคคีรี” พร้อมตราตั้งให้เป็นพระพุทธรูปประจำเมืองภูเก็ต"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="พระใหญ่เมืองภูเก็ต"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

</androidx.constraintlayout.widget.ConstraintLayout>